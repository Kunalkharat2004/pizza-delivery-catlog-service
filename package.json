{
    "name": "template-service",
    "version": "1.0.0",
    "description": "A user management service",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.ts",
        "build": "tsc",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky install",
        "test:watch": "jest --watch --runInBand",
        "start": "ts-node src/index.ts",
        "test": "jest --runInBand"
    },
    "keywords": [
        "typescript",
        "mongoose",
        "mongodb",
        "express"
    ],
    "author": "Kunal Kharat <kunalkharat2004@gmail.com>",
    "license": "ISC",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "dependencies": {
        "config": "^3.3.12",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "express": "^5.1.0",
        "express-validator": "^7.2.1",
        "http-errors": "^2.0.0",
        "js-yaml": "^4.1.0",
        "mongoose": "^8.13.2",
        "uuid": "^11.1.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/config": "^3.3.5",
        "@types/express": "^5.0.1",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.17",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^10.0.0",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^8.29.0",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.3",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2"
    }
}
